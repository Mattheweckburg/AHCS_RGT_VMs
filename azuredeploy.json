{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "RG_Prod_str": {
            "type": "string",
            "metadata": {
                "description": "Unique DNS Name for the Storage Account where the Production Virtual Machine's disks will be placed."
        },
        "RG_QA_str": {
            "type": "string",
            "metadata": {
                "description": "Unique DNS Name for the Storage Account where the QA Virtual Machine's disks will be placed."
        },
        "RG_DevTst_str": {
            "type": "string",
            "metadata": {
                "description": "Unique DNS Name for the Storage Account where the DevTst Virtual Machine's disks will be placed."
        },
        "RG_Core_stor": {
            "type": "string",
            "metadata": {
                "description": "Unique DNS Name for the Storage Account where the Core Virtual Machine's disks will be placed."
        }
   },
    "variables": {
        "storageAccountType": "Standard_LRS"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('RG_Prod_str')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "[variables('storageAccountType')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('RG_QA_str')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "[variables('storageAccountType')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('RG_DevTst_str')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "[variables('storageAccountType')]"
            }
        },        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[parameters('RG_Core_str')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "[variables('storageAccountType')]"
            }
        }        
    ]
}
